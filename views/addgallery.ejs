<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <title>Add Gallery art</title>
    </head>
<body>
  <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Artwork</h2></div>
        <br>
        <div class="text-center">
            <form action="/addgallery" method="POST" enctype = "multipart/form-data">
                <label for="artwork_name">Artwork Name:</label><br>
                <input type="text" id="artwork_name" name="artwork_name" required><br><br>

                <label for="artist_name">Artist Name:</label><br>
                <input type="text" id="artist_name" name="artist_name" required><br><br>

                <label for="year">Year:</label><br>
                <input type="text" id="year" name="year" required><br><br>
                <label for="country">Country:</label><br>
                <input type="text" id="country" name="country" required><br><br>
                

                
                <label for="image">Image:</label><br>
                <input type="file" id="image" name="image" accept = "image/*" required><br><br>



                <label for="dsc">Description:</label><br>
                <textarea type = "text"id = "dsc" name="dsc"cols='30' rows='5'></textarea><br><br>
                <button type="submit">Add Artwork</button>
            </form>
        </div>
    </div>
</body>
</html>
